<div class="card-body dashboard">
  <h4><%= order.restaurant.name %> </h4>
  <h6>Reservation Name: <%= order.reservation_name %></h6><br>
  <h6>Reservation Time: <%= order.reservation_time %></h6>
  <h6>Your Order:
    <% order.order_items.each do |order_item| %>
      - <%= order_item.food_item.name %>
    <% end %>
  </h6>

  <h6>Reservation Note: <%= order.notes %></h6>
  <% if order.reservation_time.nil?%>
    <div class="mb-form">
      <%= simple_form_for order do |f| %>
        <%= f.input :reservation_time, as: :datetime, html5: true %>
        <%= f.input :reservation_name %>
        <%= f.input :notes %>
        <h5>Total Amount: <%= order.calculate_total_price %> TL</h5>
        <%= f.submit "Submit Reservation", class: "btn" %>
      <% end %>
    </div>
  <% end %>

  <%= link_to 'Delete Order', order_path(order), class: "btn", confirm: 'Are you sure?', method: :delete %>
</div>
