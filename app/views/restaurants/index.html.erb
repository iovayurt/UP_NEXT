<nav class="bg-dark navbar-dark">
  </nav>
  <section id="header" class="jumbotron text-center" style="background-image" linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),>
     <h1 class="display-3">RESTAURANT'S LIST</h1>
  </section>

<section id="gallery">
  <div class="container">
    <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-lg-4 mb-4">
        <div class="card">
          <img src="<%= restaurant.photo_url %>" alt="" class="card-img-top">

          <div class="card-body">

              <h2><%= restaurant.name %></h2> <br>
                          <h6><i class="far fa-star"></i> <%= restaurant.rating %></h6><br>
                          <h6><i class="fas fa-location-arrow"></i> <%= restaurant.location %></h6><br>
                          <h6>Speciality: <%= restaurant.speciality %></h6><br>
                        <%= link_to 'MENU', restaurant_path(restaurant), class: 'btn chef-btn btn-lg btn-block js-scroll-trigger'%>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
